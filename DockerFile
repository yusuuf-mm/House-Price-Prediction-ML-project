# Dockerfile

FROM python:3.10-slim

WORKDIR /app

# Copy FastAPI files
COPY app/ ./app
COPY src/model.pkl ./src/model.pkl

# Install dependencies
RUN pip install --no-cache-dir -r app/requirements.txt

# Expose port
EXPOSE 8000

# Run FastAPI
CMD ["uvicorn", "app.app:app", "--host", "0.0.0.0", "--port", "8000"]
